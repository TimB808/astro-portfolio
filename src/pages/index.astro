---
import { getCollection } from 'astro:content';

// Layout import — provides basic page elements: <head>, <nav>, <footer> etc.
import BaseLayout from '../layouts/BaseLayout.astro';

// Component Imports
import CallToAction from '../components/CallToAction.astro';
import Grid from '../components/Grid.astro';
import Hero from '../components/Hero.astro';
import Icon from '../components/Icon.astro';
import Pill from '../components/Pill.astro';
import PortfolioPreview from '../components/PortfolioPreview.astro';

// Page section components
import ContactCTA from '../components/ContactCTA.astro';
import Skills from '../components/Skills.astro';
import EducationList from '../components/EducationList.astro';
import ExperienceList from '../components/ExperienceList.astro';
import PortfolioProjects from '../components/projects.js';

// Content Fetching: List four most recent selected work
const projects = (await getCollection('work'))
	.sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
	.slice(0, 4);

// Fetch work collection to get background images
const workProjects = await getCollection('work');

// Find the specific background images
const educationBg = workProjects.find((project) => project.id === 'nested/duvet-genius')?.data.img || '';
const experienceBg = workProjects.find((project) => project.id === 'h20')?.data.img || '';

---

<BaseLayout>
  <div class="stack gap-20 lg:gap-48">
    <div class="wrapper stack gap-8 lg:gap-20">
      <header class="hero">
        <Hero
          title="Hello, I'm Tim Beyer"
          tagline="Welcome to my portfolio page! I'm a data analyst based in Berlin."
          subtext=" I have a strong foundation in data manipulation, analysis, visualization and machine learning/deep learning, gained through intensive bootcamp and hands-on project experience. With problem-solving, critical thinking and interpersonal/communication skills honed over seven years in international development, consulting and government, I'm eager to join a new team where I can keep developing my coding skills."
          align="start"
        >
        <!-- Download CV Button -->
        <CallToAction href="/assets/CV-Tim-Beyer.pdf" target="_blank" rel="noopener noreferrer" download="Tim-Beyer-CV.pdf">
          Download CV
          <Icon icon="download" size="1.2em" />
        </CallToAction>

        </Hero>
        <img
          alt="Tim Beyer smiling in front of white wall"
          width="480"
          height="620"
          src="/assets/TB-portrait-3.jpg"
        />
      </header>

    </div>

    <main class="stack gap-20 lg:gap-48 with-background">
      <div class="wrapper stack gap-20 lg:gap-48"> <!-- Added wrapper here -->
        <!-- Projects Section -->

        <section class="section bg-variant">
          <header class="section-header stack gap-2 lg:gap-4">
            <h3>Projects</h3>
          </header>
          <div class="gallery">
            <Grid variant="small">
              {PortfolioProjects.map((project) => (
                <li class="mention-card">
                  <img src={project.image} alt={project.title} />
                  <h4>
                    <a href={project.link || project.github} target="_blank" rel="noopener noreferrer">
                      {project.title}
                    </a>
                  </h4>
                  <p>{project.description}</p>
                  {project.github && (
                    <p>
                      <strong>GitHub:</strong> <a href={project.github} target="_blank" rel="noopener noreferrer">{project.github}</a>
                    </p>
                  )}
                </li>
              ))}
            </Grid>
          </div>
        </section>
        <!-- Education Section -->
        <section class="education-section boxed-section" style={`background-image: url(${educationBg})`}>
          <header class="section-header stack gap-2 lg:gap-4">
            <h3>Education</h3>
          </header>
          <EducationList />
        </section>

        <!-- Work Experience Section -->
        <section class="experience-section boxed-section" style={`background-image: url(${experienceBg})`}>
          <header class="section-header stack gap-2 lg:gap-4">
            <h3>Work Experience</h3>
          </header>
          <ExperienceList />
        </section>
      <!-- Contact Section -->
      <div class="wrapper"> <!-- Ensuring the contact CTA is also aligned -->
        <ContactCTA />
      </div>
    </main>
  </div>
</BaseLayout>





<style>
	.hero {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 2rem;
	}

	.roles {
		display: none;
	}

	.hero img {
		aspect-ratio: 5 / 4;
		object-fit: cover;
		object-position: top;
		border-radius: 1.5rem;
		box-shadow: var(--shadow-md);
	}

	@media (min-width: 50em) {
		.hero {
			display: grid;
			grid-template-columns: 6fr 4fr;
			padding-inline: 2.5rem;
			gap: 3.75rem;
		}

		.roles {
			margin-top: 0.5rem;
			display: flex;
			gap: 0.5rem;
		}

		.hero img {
			aspect-ratio: 3 / 4;
			border-radius: 4.5rem;
			object-fit: cover;
		}
	}

	/* ====================================================== */

	<style>
    /* Added down to overlay adjustments 10/3/25 to adapt formatting for dark mode */
  /* Default (Light Mode) Styles */
/* ✅ Light Mode: Apply Background */
/* ✅ Light Mode: Apply Background */
.education-section,
.experience-section {
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
  background-blend-mode: overlay;
  color: var(--gray-100);
  transition: background 0.3s ease-in-out;
}

/* ✅ Common Styles for Both Themes */
.education-section,
.experience-section {
  max-width: 100%;
  width: 100vw;
  padding: 3rem 2rem;
  border-radius: 1.5rem;
  box-shadow: var(--shadow-md);
}

/* ✅ Dark Mode: Remove Background */
.theme-dark .education-section,
.theme-dark .experience-section {
  background: var(--gray-900) !important;
  background-image: none !important;
  color: var(--gray-300) !important;
  border-radius: 1.5rem;
  box-shadow: var(--shadow-sm);
  padding: 3rem 2rem;
}


/* ✅ Ensure Text Doesn't Invert */
.theme-dark .education-section *,
.theme-dark .experience-section * {
  filter: none !important;
}

/* ✅ Ensure Headers are Brighter in Dark Mode */
.theme-dark .education-section .section-header h3,
.theme-dark .experience-section .section-header h3 {
  color: var(--gray-50) !important;
  text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.3);
}

/* ✅ Improve Readability for Descriptions */
.theme-dark .experience-description,
.theme-dark .education-description {
  color: var(--gray-200) !important;
  font-size: var(--text-md);
  line-height: 1.6;
}

/* ✅ Ensure List Items Stand Out */
.theme-dark .experience-description li,
.theme-dark .education-description li {
  color: var(--gray-100) !important;
  font-size: var(--text-md);
  line-height: 1.5;
}




  .education-section .section-header,
  .experience-section .section-header {
    justify-self: flex-start;
    max-width: 100%;
    text-align: left;
    width: 100%;
    font-size: var(--text-4xl); /* Match Selected Work */
    color: var(--gray-100);
    padding-left: 2.3rem;
    margin-bottom: 1.5rem;
  }

  .education-section .section-header h3,
  .experience-section .section-header h3 {
    justify-self: flex-start;
    font-weight: 600; /* Adjust as needed */
    font-size: var(--text-2xl) !important; /* Match Project section */
    color: var(--gray-100);
    margin-left: 0; /* Reset any extra margins */
    padding-left: 0; /* Remove unwanted indentation */

  }

  .full-width-section {
    max-width: 100%;
    width: 100vw;
    padding-left: 0;
    padding-right: 0;
  }

  .full-width-section .section-header {
    max-width: 100%;
    text-align: left;
    width: 100%;
  }


  .section {
		display: grid;
		gap: 2rem;
    width: 100%; /* Ensure the section itself spans full width */
    padding-left: 1rem; /* Add padding to prevent content from touching edges */
    padding-right: 1rem;
	}

	main.with-background {
		position: relative;
	}

	.with-background {
		position: relative;
    overflow: hidden; /* Prevent potential overflow issues - CONSIDER REMOVING */
	}


	.with-background::before {
		--hero-bg: var(--bg-image-subtle-2);

		content: '';
		position: absolute;
		pointer-events: none;
		left: 50%;
		width: 100vw;
    height: 100%;
		aspect-ratio: calc(2.25 / var(--bg-scale));
		top: 0;
		transform: translateX(-50%); /*remove the vertical translation  */
		background:
			url('/assets/backgrounds/noise.png') top center/220px repeat,
			var(--hero-bg) center center / var(--bg-gradient-size) no-repeat,
			var(--gray-999);
		background-blend-mode: overlay, normal, normal, normal;
		mix-blend-mode: var(--bg-blend-mode);
		z-index: -1;
	}

	.with-background.bg-variant::before {
		--hero-bg: var(--bg-image-subtle-1);
	}

	.section-header {
		justify-self: center;
		text-align: center;
		max-width: 50ch;
		font-size: var(--text-md);
		color: var(--gray-300);
	}

	.section-header h3 {
		font-size: var(--text-2xl);
	}

	@media (min-width: 50em) {
		.section {
			grid-template-columns: repeat(4, 1fr);
			grid-template-areas: 'header header header header' 'gallery gallery gallery gallery';
			gap: 5rem;
      padding-left: 2.5rem; /* Adjust padding for larger screens */
      padding-right: 2.5rem;
		}

		.section.with-cta {
			grid-template-areas: 'header header header cta' 'gallery gallery gallery gallery';
		}

		.section-header {
			grid-area: header;
			font-size: var(--text-lg);
		}

		.section-header h3 {
			font-size: var(--text-4xl);
		}

		.with-cta .section-header {
			justify-self: flex-start;
			text-align: left;
		}

		.gallery {
			grid-area: gallery;
		}

		.cta {
			grid-area: cta;
		}
	}

	/* ====================================================== */

  .mention-card {
    display: flex;
    flex-direction: column; /* Stack elements vertically */
    align-items: center;
    text-align: center;
    border: 1px solid var(--gray-800);
    border-radius: 1.5rem;
    color: var(--gray-300);
    background: var(--gradient-subtle);
    box-shadow: var(--shadow-sm);
    padding: 1rem; /* Add padding for spacing */
    overflow: hidden; /* Ensures nothing spills out */
  }

  .mention-card img {
    width: 100%; /* Make the image span the width */
    height: 6rem; /* Set a fixed height for consistency */
    object-fit: cover; /* Crop images to fit properly */
    border-radius: 1rem; /* Slightly rounded corners */
    margin-bottom: 0.5rem;
  }

  .mention-card h4 {
    margin: 0.5rem 0;
    font-size: 1rem;
  }

  .mention-card p {
    font-size: 0.9rem;
    color: var(--gray-300);
  }

  .mention-card a {
    color: var(--primary-color);
    text-decoration: none;
    font-weight: bold;
  }

  .mention-card a:hover {
    text-decoration: underline;
  }

  @media (min-width: 50em) {
    .mention-card {
      height: auto; /* Allow it to grow based on content */
      padding: 1.5rem;
    }

    .mention-card img {
      height: 8rem; /* Increase image size for larger screens */
    }
  }

  @media (max-width: 768px) {
  .education-section .section-header h3,
  .experience-section .section-header h3 {
    font-size: var(--text-lg) !important; /* Reduce to next smaller size */
  }
}

</style>
