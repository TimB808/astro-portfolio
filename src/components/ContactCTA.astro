---
import CallToAction from './CallToAction.astro';
import Icon from './Icon.astro';
---

<aside>
	<h2>Want to get in touch?</h2>
	<CallToAction href="timothy.beyer@outlook.com">
		Send Me a Message
		<Icon icon="paper-plane-tilt" size="1.2em" />
	</CallToAction>
</aside>

<style>
  aside {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 3rem;
    padding: 5rem 1.5rem;
    background-color: var(--gray-999_40);
    box-shadow: var(--shadow-sm);
    border-radius: 1.5rem; /* ✅ Add this for rounded corners */
    overflow: hidden; /* ✅ Ensures background doesn't overflow */
  }

/* Responsive adjustments */
@media (min-width: 50em) {
	aside {
		padding: 7.5rem;
		flex-direction: row;
		flex-wrap: wrap;
		justify-content: space-between;
		border-radius: 2rem; /* ✅ Adjust for larger screens */
	}
}


	h2 {
		font-size: var(--text-xl);
		text-align: center;
		max-width: 15ch;
	}

  /* Responsive adjustments */
  @media (min-width: 50em) {
    aside {
      padding: 7.5rem;
      flex-direction: row;
      flex-wrap: wrap;
      justify-content: space-between;
      border-radius: 2rem; /* ✅ Adjust for larger screens */
    }
  }

		h2 {
			font-size: var(--text-3xl);
			text-align: left;
		}
	}
  @media (max-width: 768px) {
    aside {
      padding: 1.5rem 1rem !important; /* Reduce padding further */
      gap: 1rem !important; /* Reduce space between elements */
      text-align: center !important; /* Keep everything centered */
      border-radius: 0.8rem !important; /* Slightly smaller rounding */
    }

    /* ✅ (a) Remove or Reduce Heading */
    aside h2 {
      /* OR reduce size/margins instead of removing */
      font-size: var(--text-md) !important; /* Smaller text */
      margin-bottom: 0.5rem !important; /* Reduce spacing below */
    }

    /* ✅ (b) Reduce Button Size to 70% */
    aside a {
      font-size: 0.85rem !important; /* Reduce text size */
      padding: 0.5rem 0.8rem !important; /* Shrink button padding */
      transform: scale(0.7); /* Shrink button to 70% of its normal size */
    }
  }

  }

</style>
