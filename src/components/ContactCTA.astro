---
import CallToAction from './CallToAction.astro';
import Icon from './Icon.astro';
---

<aside>
	<h2>Want to get in touch?</h2>
	<CallToAction href="mailto:timothy.beyer@outlook.com">
		Send Me a Message
		<Icon icon="paper-plane-tilt" size="1.2em" />
	</CallToAction>
</aside>

<style>
  aside {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 3rem;
    padding: 5rem 1.5rem;
    background-color: var(--gray-999_40);
    box-shadow: var(--shadow-sm);
    border-radius: 1.5rem; /* ✅ Add this for rounded corners */
    overflow: hidden; /* ✅ Ensures background doesn't overflow */
  }

/* Responsive adjustments */
@media (min-width: 50em) {
	aside {
		padding: 7.5rem;
		flex-direction: row;
		flex-wrap: wrap;
		justify-content: space-between;
		border-radius: 2rem; /* ✅ Adjust for larger screens */
	}
}


	h2 {
		font-size: var(--text-xl);
		text-align: center;
		max-width: 15ch;
	}

  /* Responsive adjustments */
  @media (min-width: 50em) {
    aside {
      padding: 7.5rem;
      flex-direction: row;
      flex-wrap: wrap;
      justify-content: space-between;
      border-radius: 2rem; /* ✅ Adjust for larger screens */
    }
  }

		h2 {
			font-size: var(--text-3xl);
			text-align: left;
		}
}


</style>
